<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:startDestination="@id/accueilFragment"
    android:id="@+id/nav_graph"
    >
    <fragment
        android:id="@+id/accueilFragment"
        android:name="com.example.songtolyrics.fragments.AccueilFragment"
        android:label="fragment_accueil"
        tools:layout="@layout/fragment_accueil">
        <action
            android:id="@+id/action_accueilFragment_to_listMusicFragment"
            app:destination="@id/listMusicFragment" />
        <action
            android:id="@+id/action_accueilFragment_to_lyricsFragment"
            app:destination="@id/HomeFragment" />
        <action
            android:id="@+id/action_accueilFragment_to_reccordFragment"
            app:destination="@id/reccordFragment" />
        <action
            android:id="@+id/action_accueilFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_accueilFragment_to_spotifyConnectFragment"
            app:destination="@id/spotifyConnectFragment" />
    </fragment>
    <fragment
        android:id="@+id/listMusicFragment"
        android:name="com.example.songtolyrics.fragments.ListMusicFragment"
        android:label="fragment_list_music"
        tools:layout="@layout/fragment_list_music" >
        <argument
            android:name="TITLE"
            app:argType="string" />
        <argument android:name="ARTIST"
            app:argType="string" />
        <action
            android:id="@+id/action_listMusicFragment_to_lyricsFragment"
            app:destination="@id/HomeFragment" />
        <argument
            android:name="Source"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.songtolyrics.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="Artist"
            app:argType="string" />
        <argument
            android:name="Title"
            app:argType="string" />
        <action
            android:id="@+id/action_HomeFragment_to_listMusicFragment"
            app:destination="@id/listMusicFragment" />
        <action
            android:id="@+id/action_HomeFragment_to_lyricsResultFragment"
            app:destination="@id/lyricsResultFragment" />
    </fragment>
    <fragment
        android:id="@+id/reccordFragment"
        android:name="com.example.songtolyrics.fragments.ReccordFragment"
        android:label="fragment_reccord"
        tools:layout="@layout/fragment_reccord" >
        <action
            android:id="@+id/action_reccordFragment_to_lyricsFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.songtolyrics.fragments.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_historyFragment_to_lyricsFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/spotifyConnectFragment"
        android:name="com.example.songtolyrics.fragments.SpotifyConnectFragment"
        android:label="fragment_spotify_connect"
        tools:layout="@layout/fragment_spotify_connect" >
        <action
            android:id="@+id/action_spotifyConnectFragment_to_listMusicFragment"
            app:destination="@id/listMusicFragment"
            app:popUpTo="@id/accueilFragment" />
    </fragment>
    <fragment
        android:id="@+id/lyricsResultFragment"
        android:name="com.example.songtolyrics.fragments.LyricsResultFragment"
        android:label="fragment_lyrics_result"
        tools:layout="@layout/fragment_lyrics_result" >
        <action
            android:id="@+id/action_lyricsResultFragment_to_HomeFragment"
            app:destination="@id/HomeFragment"
            app:popUpTo="@id/HomeFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="Music"
            app:argType="com.example.songtolyrics.model.Music" />
    </fragment>
</navigation>