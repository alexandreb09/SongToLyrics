<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:startDestination="@id/homeFragment"
    android:id="@+id/nav_graph"
    >
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.songtolyrics.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_listMusicFragment"
            app:destination="@id/listMusicFragment" />
        <action
            android:id="@+id/action_homeFragment_to_lyricsFragment"
            app:destination="@id/lyricsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_reccordFragment"
            app:destination="@id/reccordFragment" />
        <action
            android:id="@+id/action_homeFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_homeFragment_to_spotifyConnectFragment"
            app:destination="@id/spotifyConnectFragment" />
    </fragment>
    <fragment
        android:id="@+id/listMusicFragment"
        android:name="com.example.songtolyrics.fragments.ListMusicFragment"
        android:label="fragment_list_music"
        tools:layout="@layout/fragment_list_music" >
        <argument
            android:name="TITLE"
            app:argType="string" />
        <argument android:name="ARTIST"
            app:argType="string" />
        <action
            android:id="@+id/action_listMusicFragment_to_lyricsFragment"
            app:destination="@id/lyricsFragment" />
    </fragment>
    <fragment
        android:id="@+id/lyricsFragment"
        android:name="com.example.songtolyrics.fragments.LyricsFragment"
        android:label="fragment_lyrics"
        tools:layout="@layout/fragment_lyrics" >
        <argument
            android:name="Artist"
            app:argType="string" />
        <argument
            android:name="Title"
            app:argType="string" />
        <action
            android:id="@+id/action_lyricsFragment_to_listMusicFragment"
            app:destination="@id/listMusicFragment" />
    </fragment>
    <fragment
        android:id="@+id/reccordFragment"
        android:name="com.example.songtolyrics.fragments.ReccordFragment"
        android:label="fragment_reccord"
        tools:layout="@layout/fragment_reccord" >
        <action
            android:id="@+id/action_reccordFragment_to_lyricsFragment"
            app:destination="@id/lyricsFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.songtolyrics.fragments.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_historyFragment_to_lyricsFragment"
            app:destination="@id/lyricsFragment" />
    </fragment>
    <fragment
        android:id="@+id/spotifyConnectFragment"
        android:name="com.example.songtolyrics.fragments.SpotifyConnectFragment"
        android:label="fragment_spotify_connect"
        tools:layout="@layout/fragment_spotify_connect" >
        <action
            android:id="@+id/action_spotifyConnectFragment_to_spotifyListMusicFragment"
            app:destination="@id/spotifyListMusicFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/spotifyListMusicFragment"
        android:name="com.example.songtolyrics.fragments.SpotifyListMusicFragment"
        android:label="fragment_spotify_list_music"
        tools:layout="@layout/fragment_spotify_list_music" >
        <action
            android:id="@+id/action_spotifyListMusicFragment_to_lyricsFragment"
            app:destination="@id/lyricsFragment" />
    </fragment>
</navigation>